<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>
  <h2>Your Cart</h2>
  <table>

      <div id="cart" class="carts">
        <%= render 'carts/line_item' %>
      </div>

    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(@cart.total_price) %></td>
      </tr>
    </tfoot>
</table>
  <%= button_to 'Empty cart', @cart,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
</article>
